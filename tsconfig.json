{
  "include": ["src"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2019",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "lib": ["ES2019", "DOM"],
    "preserveSymlinks": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist"
  },
  "exclude": ["node_modules"]
}
